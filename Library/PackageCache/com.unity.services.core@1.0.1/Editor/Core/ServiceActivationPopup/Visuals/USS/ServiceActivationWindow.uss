.total-window {
    flex-grow: 1;
    padding: 10px;
    align-content: stretch;
}

.service-activation-title {
    font-size: 24px;
    -unity-font-style: bold;
    flex-grow: 1;
}

.project-bind-exception {
    align-content: stretch;
    flex-grow: 1;
}

.separator {
    margin-top: 5px;
    margin-bottom: 5px;
    height: 2px;
}

.exception-context,
.exception-string{
    flex-wrap: wrap-reverse;
}

.spacer {
    flex-grow: 1;
}

.buttons {
    flex-direction: row-reverse;
}

.confirmation-button,
.cancel-button{
    width: 100px;
}

.offline-icon,
.logged-out-icon {
    background-image:resource("Icons/console.warnicon.png");
    width:32px;
    height:32px;
}

.offline-message,
.logged-out-message {
    font-size:30px;
    width:210px;
    padding-top:20px;
    -unity-text-align:upper-center;
}

.offline-container,
.logged-out-container {
    padding-top:50px;
}

.center-middle-block {
    align-items:center;
}

.center-middle-block > #RefreshBtn,
.center-middle-block > #SignInBtn {
    margin-top:20px;
}

.content-body {
    margin-top: 10px;
    margin-left: 10px;
}

.services-description-body-inner {
    margin-left: 5px;
 }
