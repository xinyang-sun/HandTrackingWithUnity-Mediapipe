.project-settings-header-container {
    flex-direction:column;
}

.project-settings-title-container {
    flex-direction:row;
    padding:10px 4px 4px 8px;
}

.service-title{
    font-size:18px;
    -unity-font-style:bold;
    flex-grow:1;
}

.service-description{
    padding:4px 4px 4px 8px;
    flex-wrap:wrap;
    white-space:normal;
}

.link-container {
    flex-direction:row;
    padding:8px 4px 4px 8px;
}

.link-button {
    flex-grow:0;
    align-self:flex-start;
    padding:5px 5px 5px 0px;
    cursor:link;
    flex-direction:row;
    background-color:rgba(0, 0, 0, 0);
    border-color:rgba(0, 0, 0, 0);
    margin-top:0px;
    margin-bottom:0px;
    border-width:0px;
}

.link-button:hover {
    background-color:rgba(0, 0, 0, 0);
    border-color:rgba(0, 0, 0, 0);
}

.separator {
    margin-top:5px;
    margin-bottom:5px;
    height:2px;
}

.offline-icon,
.warning-icon,
.logged-out-icon {
    background-image:resource("Icons/console.warnicon.png");
    width:32px;
    height:32px;
}

.offline-message,
.logged-out-message {
    font-size:30px;
    width:210px;
    padding-top:20px;
    -unity-text-align:upper-center;
}

.offline-container,
.warning-container,
.logged-out-container {
    padding-top:50px;
}

.center-middle-block {
    align-items:center;
}

.center-middle-block > #RefreshBtn,
.center-middle-block > #SignInBtn {
    margin-top:20px;
}

.warning-message {
    font-size:20px;
    width:210px;
    padding-top:20px;
    -unity-text-align:upper-center;
}
