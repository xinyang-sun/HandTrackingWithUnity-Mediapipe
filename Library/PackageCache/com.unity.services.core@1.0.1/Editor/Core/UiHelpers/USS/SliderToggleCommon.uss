.slider-toggle{
    width:38px;
    justify-content:flex-end;
}

.slider-toggle > .unity-toggle__input{
    cursor:link;
    width:38px;
    flex-grow:0;
    justify-content:center;
}

.slider-toggle {
    width:42px;
    overflow:visible;
    justify-content:center;
}

.slider-toggle > .unity-toggle__input {
    width:42px;
    overflow:visible;
}

.slider-toggle > .unity-toggle__input > .unity-toggle__checkmark {
    height:24px;
    width:42px;
    -unity-background-scale-mode:stretch-to-fill;
}